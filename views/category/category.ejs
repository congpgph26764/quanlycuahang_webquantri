<%- include('../inc/top', { title: 'LIST CATEGORY' }); %>
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 10px;">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section" style="margin-top: 40px; color: darkblue;"><b
                        style="font-size: 30px; font-weight: 500;">QUẢN LÝ THỂ LOẠI</b></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex float-lg-end" style="margin-bottom: 20px;"><button type="button" class="btn btn-outline-primary "
                        onclick="location.href='http://localhost:3000/addcat'">Thêm Thể Loại</button></div>
                <div class="table-wrap">
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th><a style="color: black; text-decoration: none;"
                                        href="http://localhost:3000/category/sortcatname">Name</a>
                                </th>
                                <th>Image</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% list.forEach(data=>{%>
                                <tr class="alert" role="alert">

                                    <td>
                                        <%=data.name %>
                                    </td>

                                    <td>
                                        <img style="width: 50px; height: 50px;" src="<%= data.image %>">
                                    </td>

                                    <td>

                                        <button type="submit">
                                            <div>

                                                <span><a href="/category/update/<%=data._id%>"
                                                        onclick="return mconfirm_alert(this);"><i
                                                            class="bi bi-pencil-square"></i></i></a></span>
                                            </div>
                                        </button>

                                        <!-- <button type="submit">

                                            <span><a href="/category/delete/<%=data._id%>"
                                                    onclick="return confirm_alert(this);"> <i
                                                        class="fa fa-trash"></i></a></span>
                                        </button> -->
                                    </td>
                                </tr>

                                <%} ) %>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
