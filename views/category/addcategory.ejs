<%- include('../inc/top', { title: 'ADD CATEGORY' }); %>
<div class="container">
    <div class="page-wrapper p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card">
                <div class="card-heading">
                    <h2 class="title" style="color: blue; margin-top: 20px; text-align: center;">THÊM THỂ LOẠI SẢN PHẨM</h2>
                </div>
                <div class="card-body">
                    <form action="" method="POST" enctype="multipart/form-data">
                        
                        <div class="form-row" style="margin-left: 20px;">
                            <div class="input-group has-validation">
                                <span style="width: 96px;" class="input-group-text" id="validationTooltipUsernamePrepend">Name</span>
                                <input type="text" name="name" class="form-control" id="validationTooltipUsername"
                                  aria-describedby="validationTooltipUsernamePrepend" required>
                                <div class="invalid-tooltip">
                                  Please choose a unique and valid name.
                                </div>
                              </div>
                        </div>

                        <div class="form-row" style="margin-top: 10px;">
                            <div class="input-group has-validation">
                              <input type="file" name="image" style="margin-left: 20px; padding: 5px;" />
                              <div class="invalid-tooltip">
                                Please choose a unique and valid image.
                              </div>
                            </div>
                          </div>

                        
                       
                        <div class="d-flex justify-content-center">
                            <button class="btn btn--radius-2 btn--blue " type="submit">Thêm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../inc/bottom') %>