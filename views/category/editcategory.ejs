<%- include('../inc/top') %>
  <div class="container">
    <div class="page-wrapper p-t-45 p-b-50">
      <div class="wrapper wrapper--w790">
        <div class="card card-5">
          <div class="card-heading">
            <h2 class="title" style="text-align: center; padding: 10px;">SỬA LOẠI SẢN PHẨM </h2>
          </div>
          <div class="card-body">
            <form action="" method="POST" enctype="multipart/form-data">

              <div class="form-row" style="margin-left: 5px;">
                <div class="input-group has-validation">
                  <span class="input-group-text" style="width: 96px; margin-left: 20px;"
                    id="validationTooltipUsernamePrepend">Name</span>
                  <input type="text" name="name" value="<%= objCat.name %>" class="form-control"
                    id="validationTooltipUsername" aria-describedby="validationTooltipUsernamePrepend" required>
                  <div class="invalid-tooltip">
                    Please choose a unique and valid name.
                  </div>
                </div>
              </div>

              <div class="form-row" style="margin-top: 10px;">
                <div class="input-group has-validation">
                  <input type="file" name="image" style="margin-left: 20px; padding: 5px;" />
                  <div class="invalid-tooltip">
                    Please choose a unique and valid image.
                  </div>
                </div>
              </div>



              <div class="d-flex justify-content-center">
                <button class="btn btn--radius-2 btn--red " type="submit"
                  style="border-width: 1; background-color: antiquewhite;">UPDATE</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('../inc/bottom') %>