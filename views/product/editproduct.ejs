<%- include('../inc/top', { title: 'EDIT PRODUCT' }); %>
<div class="container">
    <div class="page-wrapper p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="ten">SỬA THÔNG TIN VẬT NUÔI</h2>
                </div>
                <div class="card-body">
                    <form action="" method="POST" enctype="multipart/form-data">

                        <div class="form-row">
                            <div class="name">Cân nặng</div>
                            <div class="value">
                                <div class="row row-refine">
                                    <div class="input-group col-8">
                                        <input class="input--style-5" type="text" name="cannang" value="<%= objNote.cannang %>" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Màu lông</div>
                            <div class="value">
                                <div class="row row-refine">
                                    <div class="input-group col-8">
                                        <input class="input--style-5" type="text" name="maulong" value="<%= objNote.maulong %>" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Mô tả</div>
                            <div class="value">
                                <div class="row row-refine">
                                    <div class="input-group col-8">
                                        <input class="input--style-5" type="text" name="mota" value="<%= objNote.mota %>" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button class="btn btn--radius-2 btn--green" type="submit">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<%- include('../inc/bottom'); %>