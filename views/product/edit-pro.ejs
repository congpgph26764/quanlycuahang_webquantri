<!DOCTYPE html>
<html>
<head>
  <title>Thêm Sản phẩm</title>
  <style>
    .form-container {
      max-width: 400px;
      margin: 0 auto;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
    }

    .form-group input[type="text"],
    .form-group textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .form-group input[type="number"] {
      width: 250px;
    }

    .form-group input[type="submit"] {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Sửa Sản phẩm</h2>
    <form action="" method="post">
      <div class="form-group">
        <label for="name">Tên sản phẩm:</label>
        <input type="text" id="name" name="name" required value="<%= objSP.name %>">
      </div>
      <div class="form-group">
        <label for="price">Giá:</label>
        <input type="number" id="price" name="price" required value="<%= objSP.price %>">
      </div>
      <div class="form-group">
        <label for="quantity">Số lượng:</label>
        <input type="number" id="quantity" name="quantity" required value="<%= objSP.quantity %>">
      </div>
      <div class="form-group">
        <label for="description">Mô tả:</label>
        <input type="text" id="description" name="description" required value="<%= objSP.description %>">
      </div>
      <!-- <div class="form-group">
        <label for="image">Image:</label>
        <input type="file" id="image" name="image" required value="<%= objSP.image %>">
      </div> -->
      <div class="form-group">
        <label for="category">Thể loại:</label>
        <select name="id_category" >
            <% data.forEach( (objTL)=>{ 
                let selected = '';// xác định thể loại đã chọn của sp
                if(String( objTL._id ) == String(objSP.id_category) ){
                    selected = '  selected ';
                }
                %>
                
                <option  <%= selected %> 
                    value="<%= objTL._id %>"> <%= objTL.name %>  </option>

            <%   } ) %>
        </select>
      </div>
      <div class="form-group">
        <input type="submit" value="Sửa sản phẩm">
      </div>
    </form>
  </div>
</body>
</html>
