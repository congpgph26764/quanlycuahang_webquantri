<!DOCTYPE html>
<html>
<head>
  <title>Thêm Sản phẩm</title>
  <style>
    .form-container {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f2f2f2;
      border-radius: 5px;
    }

    .form-container input[type=text], .form-container input[type=number], .form-container textarea, .form-container select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 4px;
    }

    .form-container input[type=submit] {
      background-color: #4CAF50;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      float: right;
    }

    .form-container input[type=submit]:hover {
      background-color: #45a049;
    }

    .form-container::after {
      content: "";
      display: table;
      clear: both;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Thêm Sản phẩm</h2>
    <form action="" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required>
      </div>
      <div class="form-group">
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" required>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required></textarea>
      </div>

      
      <label for="role">Status</label>
      <select id="status" name="status" required>
        <option value="New">New</option>
        <option value="Old">Old</option>
      </select>
      
      <div class="form-group">
        <label for="category">Category:</label>
        <select name="id_category" >
          <% data.forEach( (objTL)=>{ %>
              
              <option value="<%= objTL._id %>"> <%= objTL.name %>  </option>

          <%   } ) %>
      </select>
      </div>

      <div class="form-row" style="margin-top: 10px;">
        <div class="input-group has-validation">
          <input type="file" name="image" style="margin-left: 20px; padding: 5px;" />
          <div class="invalid-tooltip">
            Please choose a unique and valid image.
          </div>
        </div>
      </div>
      <div class="form-group">
        <input type="submit" value="Submit">
      </div>
    </form>
  </div>
</body>
</html>
