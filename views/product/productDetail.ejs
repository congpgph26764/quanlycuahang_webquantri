<%- include('../inc/top', { title: 'DETAIL PRODUCT' }); %>
<div style="text-align: center; margin: 50px;">
    <h2 style="color: blue;">PRODUCT DETAILS</h2>
</div>
<div class="row" style="margin: 40px;">
    <section>
        <div class="container d-flex">
            <div class="left" style="margin-left: 20px;">
                <div class="main_image">
                    <img src="<%= objProduct.image %>" style="width: 390px;">
                </div>

            </div>
            <div class="right" style="margin: 60px; margin-left: 100px; padding: 10px;">
                <h3 style="color: #ac2bac;"> Name: 
                    <%= objProduct.name %>
                </h3>
                <p style="color: #dd4b39;"> Price: 
                    <%= objProduct.price %>
                    <small>VND</small>
                </p> 
                <p style="margin-top: 10px;">Category: <%= objProduct.id_category.name %>
                </p>
                <p> 
                    Description: <%=objProduct.description %>
                </p>

            </div>
    </section>
    <%- include('../inc/bottom') %>