<%- include('../inc/top', { title: 'ADD PRODUCT' }); %>
<form  class="d-grid gap-2 col-5 mx-auto" method="post">
        <div class="row">
            <!-- product title -->
            <div class="col-md-12 mt-3">
                <div class="form-group">
                    <label for="prodcuct_title">Product Name<span style="color: red;">*</span></label>
                    <input type="text" class="form-control" name="name" required>
                    <span id="error" class="text-danger"></span>
                </div>
    
            </div>
    
            
    
    
            <div class="col-md-6 mt-3">
                <div class="form-group">
                    <label for="price">Price<span style="color: red;">*</span></label>
                    <input type="number" class="form-control" name="price" min="0" value=0 >
                    <span id="error" class="text-danger"></span>
                </div>
    
            </div>

            <div class="col-md-6 mt-3">
                <div class="form-group">
                    <label for="quantity">Quantity<span style="color: red;">*</span></label>
                    <input type="number" class="form-control" name="quantity" min="0" value=0 >
                    <span id="error" class="text-danger"></span>
                </div>
    
            </div>
        
            <div class="col-md-12 mt-3">
                <div class="form-group">
                    <label for="product_image">Product Image <span style="color: red;">*</span></label>
                    <input type="file" class="form-control" name="image">
                    <span id="image_error" class="text-danger"></span>
                </div>
            </div>

    
            <!-- Long/breif Description -->
            <div class="col-md-12 mt-3">
                <div class="form-group">
                    <label for="long_description">Description</label>
                    <textarea name="description" rows="5" class="form-control" ></textarea>
                    <span id="long_description_error" class="text-danger"></span>
                </div>
            </div>
        </div>


    
        <div class="col-md-12 text-center mt-4">
          <button type="submit" class="btn btn-dark btn-block add-more-thumbnail">Add Product</button>
      </div>
    </form>
<%- include('../inc/bottom'); %>