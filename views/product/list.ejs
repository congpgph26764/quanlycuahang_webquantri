<%- include('../inc/top'); %>
<div class="container">
  <main class="mt-5 pt-3">
    <div class="row">
      <div class="col-md-12">
        <h2 style="text-align: center; margin-bottom: 65px; color: darkblue;">PRODUCT</h2>
      </div>

      <div class="d-flex float-lg-end" style="margin-bottom: 10px; margin-left: 20px;"><button type="button"
          class="btn btn-outline-primary " onclick="location.href='http://localhost:3000/add-pro'">Thêm Sản Phẩm</button></div>
    </div>
    <div class="row">
      <div class="col-md-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table id="example" class="table table-striped data-table" style="width: 100%">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach(data=>{%>
                    <tr>
                      <td>
                        <a style="text-decoration: none;" href="/details/<%= data._id %>">
                          <%=data.name %>
                        </a>
                      </td>

                      <td>
                        <%=data.price %>
                      </td>

                      <td>
                        <%=data.quantity %>
                      </td>

                      <td>
                        <%=data.description %>
                      </td>

                      <td>
                        <%=data.status %>
                      </td>

                      <td>
                        <%=data.id_category.name %>
                      </td>
                      <td>
                        <img style="width: 80px; height: 75px;" src="<%= data.image %>">
                      </td>

                      <td>
                        <button type="submit">
                          <div>

                            <span><a href="/product/update/<%=data._id%>" onclick="return mconfirm_alert(this);"><i
                                  class="bi bi-pencil-square"></i></i></a></span>
                          </div>
                        </button>
                        <!-- 
                                                <button type="submit">

                                                    <span><a href="/category/delete/<%=data._id%>" onclick="return confirm_alert(this);"> <i
                                                          class="fa fa-trash"></i></a></span>
                                                  </button> -->

                      </td>
                    </tr>
                    <%} ) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </main>
</div>
