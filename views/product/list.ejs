<%- include('../inc/top') %>
  <div class="container">
    <div class="row justify-content-center" style="margin-top: 10px;">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section"><b>Quản Lý Sản Phẩm</b></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="d-flex" style="margin-bottom: 5px;"><button type="button" class="btn btn-success "
            onclick="location.href='http://localhost:3000/add-pro'">Thêm Sản Phẩm</button></div>
        <div class="d-flex flex-row-reverse " style="margin-bottom: 5px;">
          <select class="browser-default custom-select" style="margin-bottom: 5px;"><button type="button"
              class="btn btn-success " onchange="document.location.href=this.value">
              <option selected>Lọc</option>
              <option value="http://localhost:3000/product/">Reset</option>
              <% data.forEach(data=>{%>
                <option value="http://localhost:3000/product/?id_category=<%= data._id%>">
                  <%= data.name%>
                </option>
                <%} ) %>

          </select>
        </div>
        <div class="table-wrap">
          <table class="table table-responsive-xl">
            <thead class="thead-dark">
              <tr>
                <th><a style="color: black; text-decoration: none;"
                    href="http://localhost:3000/product/sortproname">Name</a>
                </th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Description</th>
                <th>Image</th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(data=>{%>
                <tr class="alert" role="alert">

                  <td>
                    <%=data.name %>
                  </td>

                  <td>
                    <%=data.price %>
                  </td>

                  <td>
                    <%=data.quantity %>
                  </td>

                  <td>
                    <%=data.description %>
                  </td>

                  <td>
                    <img style="width: 50px; height: 50px;" src="<%= data.image %>">
                  </td>


                  <td>

                    <button type="submit">
                      <div>

                        <span><a href="/product/update/<%=data._id%>" onclick="return mconfirm_alert(this);"><i
                              class="bi bi-pencil-square"></i></i></a></span>
                      </div>
                    </button>
                    </button>
<!-- 
                    <button type="submit">

                      <span><a href="/product/delete/<%=data._id%>" onclick="return confirm_alert(this);"> <i
                            class="fa fa-trash"></i></a></span>
                    </button> -->
                  </td>
                </tr>

                <%} ) %>


            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
