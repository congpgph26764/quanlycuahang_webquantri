<%- include('../inc/top') %>
  <div class="container">
    <div class="row justify-content-center" style="margin-top: 10px;">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section"><b>FEEDBACK</b></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="d-flex" style="margin-bottom: 5px;"><button type="button" class="btn btn-success "
            onclick="location.href='http://localhost:3000/addFeed'">Gửi Feedback</button></div>
        <div class="table-wrap">
          <table class="table table-responsive-xl">

            <thead>

              <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Question</th>
                <th>Comment</th>
              </tr>

            </thead>

            <tbody>
              <% list.forEach(data=>{%>
                <tr class="alert" role="alert">

                  <td>
                    <%=data.name %>
                  </td>

                  <td>
                    <%=data.phone %>
                  </td>

                  <td>
                    <%=data.email %>
                  </td>

                  <td>
                    <%=data.question %>
                  </td>

                  <td style="width: 300px;
                  overflow: hidden;
                  text-overflow: ellipsis;
                  line-height: 25px;
                  -webkit-line-clamp: 3;
                  height: 75px;
                  display: -webkit-box;
                  -webkit-box-orient: vertical;">
                    <%=data.comment %>
                  </td>

                  <td>

                    <button type="submit">

                      <span><a href="/feedback/delete/<%=data._id%>" onclick="return confirm_alert(this);"> <i
                            class="fa fa-trash"></i></a></span>
                    </button>
                  </td>

                </tr>

                <%} ) %>


            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    function confirm_alert(node) {
      return confirm("Bạn có chắc chắn xóa không ?");
    }
  </script>

  <%- include('../inc/bottom') %>