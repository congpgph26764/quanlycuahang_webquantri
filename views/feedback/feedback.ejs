<%- include('../inc/top') %>
  <div class="container">
    <div class="row justify-content-center" style="margin-top: 10px;">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section" style="margin-top: 40px; color: darkblue;"><b
            style="font-size: 30px; font-weight: 500;">FEEDBACK</b></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <!-- <div class="d-flex" style="margin-bottom: 5px;"><button type="button" class="btn btn-success "
            onclick="location.href='http://localhost:3000/addFeed'">Gửi Feedback</button></div>
        <div class="table-wrap"> -->
        <table class="table table-bordered table-striped">

          <thead>

            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Comment</th>
              <th>Image</th>
            </tr>

          </thead>

          <tbody>
            <% list.forEach(data=>{%>
              <tr class="alert" role="alert">

                <td>
                  <%=data.name %>
                </td>

                <td>
                  <%=data.phone %>
                </td>

                <td>
                  <%=data.email %>
                </td>

                <td>
                  <%=data.comment %>
                </td>

                <td>
                  <img style="width: 50px; height: 50px;" src="<%= data.image %>">
                </td>

                <td>

                  <button type="submit">

                    <span><a href="/feedback/delete/<%=data._id%>" onclick="return confirm_alert(this);"> <i
                          class="fa fa-trash"></i></a></span>
                  </button>
                </td>

              </tr>

              <%} ) %>


          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>

  <script type="text/javascript">
    function confirm_alert(node) {
      return confirm("Bạn có chắc chắn xóa không ?");
    }
  </script>

  <%- include('../inc/bottom') %>