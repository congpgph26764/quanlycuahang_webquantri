<%- include('../inc/top', { title: 'EDIT ACCOUNT' }); %>
<!DOCTYPE html>
<html>
<head>
  <style>
    /* CSS cho form */
    .form-container {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f2f2f2;
      border-radius: 5px;
    }

    .form-container input[type=text],  .form-container input[type=password], .form-container input[type=email], .form-container input[type=tel], .form-container select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 4px;
    }

    .form-container input[type=submit] {
      background-color: #4CAF50;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      float: right;
    }

    .form-container input[type=submit]:hover {
      background-color: #45a049;
    }

    .form-container::after {
      content: "";
      display: table;
      clear: both;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Edit Account</h2>
    <form action="" method="post">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="<%= objAccount.name %>" required>

      <label for="password">Password</label>
      <input type="password" id="password" name="password" value="<%= objAccount.password %>" required>

      <label for="email">Email</label>
      <input type="email" id="email" name="email" value="<%= objAccount.email %>" required>

      <label for="phone">Phone</label>
      <input type="tel" id="phone" name="phone" value="<%= objAccount.phone %>" required>

      <label for="address">Address</label>
      <input type="text" id="address" name="address" value="<%= objAccount.address %>" required>

      <!-- <label for="role">Role</label>
      <select name="role" required>
            <% data.forEach( (account)=>{ 
                let selected = '';
                if(String( account._id ) == String(objAccount.role) ){
                    selected = '  selected ';
                }
                %>
                
                <option  <%= selected %> 
                    value="<%= account._id %>"> <%= account.role %>  </option>

            <%   } ) %>
        </select> -->

      <input type="submit" value="Submit">
    </form>
  </div>
</body>
</html>

